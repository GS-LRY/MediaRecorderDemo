<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/tv_11"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="启动MediaRecorder服务" />

            <Button
                android:id="@+id/tv_12"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="启动MediaCodec服务" />

            <Button
                android:id="@+id/tv_13"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="启动OpenGL服务" />

            <Button
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="停止服务" />

            <Button
                android:id="@+id/tv_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="最大化窗口" />

            <Button
                android:id="@+id/tv_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="测试跳转速度" />


            <Button
                android:id="@+id/tv_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="同步验证" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>